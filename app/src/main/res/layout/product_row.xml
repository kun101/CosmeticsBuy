<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/product_display_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/cast_album_art_placeholder"
            android:scaleType="fitCenter"/>

        <TextView
            android:id="@+id/product_display_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_below="@+id/product_display_image"
            android:text="Sample Product" />

        <TextView
            android:id="@+id/product_display_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_below="@+id/product_display_image"
            android:layout_alignParentRight="true"
            android:text="399" />

    </RelativeLayout>

</android.support.v7.widget.CardView>